			<div t-if="not is_html_empty(task.customer_description)" t-attf-class="col-12 col-lg-7 mb-4 mb-md-0 {{'col-lg-7' if task.attachment_ids else 'col-lg-12'}}">
				<hr class="mb-1"/>
				<div class="d-flex my-2">
					<strong>Customer comments</strong>
				</div>
				<div class="py-1 px-2 bg-100 small" t-field="task.customer_description"/>
			</div>
		</xpath>
	</template>

</odoo>