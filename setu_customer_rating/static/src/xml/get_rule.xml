<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="SetuCustomerScoreRule">
        <div>
            <div style="width:fit-content;">

                    <div style="font-size:20px;float:left;margin-top:10px;">
                        <strong id="title"><t t-esc="title"/></strong>
                    </div>

                <div style="float:right;">
                        <a role="button" tabindex="0" class="js_customer_score_rule fa fa-info-circle"
                           style="margin-left:8px; margin-top:20px;color:grey;width:20px;" aria-label="Info" title="Info"
                           data-toggle="tooltip"/>
                </div>

            </div>
        </div>
    </t>

    <t t-name="SetuCustomerScoreRulePopOver">
        <div>
            <t t-esc="content"/>
        </div>
    </t>

</templates>
