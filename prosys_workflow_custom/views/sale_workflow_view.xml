<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name = 'action_confirm']" position="before">
                <button name="approval_one" type="object"  string="first approval"
                 class="oe_highlight" groups="prosys_workflow_custom.group_firest_approval" 
                 attrs="{'invisible': [('state','not in','draft')]}"/>
                <button name="approval_tow" type="object"  string="secound approval" class="oe_highlight" 
                groups="prosys_workflow_custom.group_secound_approval" 
                attrs="{'invisible': [('state','not in','f_approve')]}"/>
                <button name="approval_three" type="object"  string="third approval" class="oe_highlight"
                  groups="prosys_workflow_custom.group_third_approval" 
                 attrs="{'invisible': [('state','not in','s_approve')]}"/>
            </xpath>
        </field>
    </record>


    <record id="sale_order_form_view_inherit_mpf" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name = 'action_confirm']" position="replace">
                 <button name="action_confirm" data-hotkey="v"
                    string="Confirm" type="object" context="{'validate_analytic': True}"
                    />
            </xpath>
        </field>
    </record>


    
</odoo>
