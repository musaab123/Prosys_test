<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
    <template id="report_rental_contract_document" name="rental_contract_custom" inherit_id="itsys_real_estate.report_rental_contract_document">
        <xpath expr="//div[hasclass('page')]" position="replace">
        <!-- <template id="report_rental_contract" > -->
			<!-- <t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="web.external_layout" >		 -->
				<!-- <div class="page"> -->

				 <style type="text/css">
                  @font-face {
                  font-family:Roboto-Light ;
                  src: url(/presys_real_estate/static/src/font/Roboto-Light.ttf);
                  }
                  h2 {font-family: Roboto-Light;}
                  td {font-family: Roboto-Light;}
                  th { font-family: Roboto-Light;}
                  h5 { font-family: Roboto-Light;}
                  h4 { font-family: Roboto-Light;}
                  span { font-family: Roboto-Light;}

                  p { font-family: Roboto-Light;}
                  span, table, th, td, b, p {
                  font-size: 15px;
                  text-align: center;
                  }
                
               </style>

		            <link rel="stylesheet" href="/presys_real_estate/static/src/css/report-style.css"/>
					<table class="report_table">
                  <tr>
                     <th align="center">
                        <span class="text-center">
                        Data required for unified contract according to requirements of the Ministry of Housing and the rental system						
                        </span>
                     </th>
                  </tr>
               </table>
               <br/>
					
					<table class="gridtable">
						<tr>
							<td colspan="4" class="text-center">Owner data</td>
						</tr>
                  <tr>
                     <td width="40%">ID Number</td>
                     <td width="60%"><span t-field="o.property_owner_id.ssn_id"/></td>
                  </tr>
                  <tr>
                     <td width="40%">Date of Birth</td>
                     <td width="60%"><span t-field="o.property_owner_id.birth_day"/></td>
                  </tr>
                  <tr>
                     <td width="40%">Mobile Number(Absher)</td>
                     <td width="60%"><span t-field="o.property_owner_id.phone"/></td>
                  </tr>
                  <tr>
                     <td width="40%">Email</td>
                     <td width="60%"><span t-field="o.property_owner_id.email"/></td>
                  </tr>
                  
                
                   
                  <t t-foreach ="o.property_owner_id.bank_ids" t-as="y">
                     <tr>
                        <td width="40%">Bank account (IBAN)</td>
                        <td width="60%"><span t-field="y.bank_id"/><br></br>
										<span t-field="y.acc_number"/>
										
						
						</td>
                     </tr>
						</t>
                 
                  <tr>
                     <td width="40%">Owner National Address </td>
                     <td width="60%"><span t-field="o.property_owner_id.street"/><br></br>
                                       <span t-field="o.property_owner_id.street2"/><br></br>
                                       <span t-field="o.property_owner_id.city"/><br></br>
                                       <span t-field="o.property_owner_id.state_id"/><br></br>
                     
                     </td>
                  </tr>

				    <tr>
                           <td colspan="4" class="text-center">Real estate data</td>
                </tr>


					
						<tr>
							<td width="40%">Instrument Number</td>
							<td width="60%"><span t-field="o.building.instrument_number"/></td>
							
						</tr>
						<tr>
							<td width="40%">Instrument Date</td>
							<td width="60%"><span t-field="o.building.instrument_date"/></td>
							
						</tr>
						<tr>
							<td width="40%">Number of Floors </td>
							<td width="60%"><span t-field="o.building.no_of_floors"/></td>
							
						</tr>
						<tr>
							<td width="40%">Number of Apartments</td>
							<td width="60%"><span t-field="o.building.props_per_floors"/></td>
							
						</tr>
						<tr>
							<td width="40%">Number of Parking</td>
							<td width="60%"><span t-field="o.building.parking_number"/></td>
							
						</tr>
						<tr>
							<td width="40%">Number of Left</td>
							<td width="60%"><span t-field="o.building.lift"/></td>
							
						</tr>

						<tr>
							<td width="40%">Property Name</td>
							<td width="60%"><span t-field="o.building.name"/></td>
							
						</tr>
						<tr>
							<td width="40%">property Creation Date</td>
							<td width="60%"><span t-field="o.building.purchase_date"/></td>
							
						</tr>
						<tr>
							<td colspan="4" class="text-center">Legal agency status</td>
						</tr>
						<tr>
							<td width="40%">Agency Number</td>
							<td width="60%"><span t-field="o.building.agency_number"/></td>
							
						</tr>
						<tr>
							<td width="40%">Agency Date</td>
							<td width="60%"><span t-field="o.building.agency_date"/></td>
							
						</tr>
						<tr>
							<td width="40%">Agent Name</td>
							<td width="60%"><span t-field="o.building.agent_name"/></td>
							
						</tr>
						<tr>
							<td width="40%">Phone Number(Absher)</td>
							<td width="60%"><span t-field="o.building.agent_phone"/></td>
							
						</tr>
					</table>




						<br></br>
				
					<div class="row">
					<div class="col-6">
					<table class="telant_table">
						<tr>
							<td colspan="4" class="text-center">Tenant data</td>
						</tr>
						<tr>
							<td width="">Name</td>
							<td width=""><span t-field="o.partner_id.name"/></td>
							
						</tr>
						<tr>
							<td width="">ID Number</td>
							<td width=""><span t-field="o.partner_id.ssn_id"/></td>
							
						</tr>
						<tr>
							<td width=""> Birth Day</td>
							<td width=""><span t-field="o.partner_id.birth_day"/></td>
						</tr>
						<tr>
							<td width="">Email</td>
							<td width=""><span t-field="o.partner_id.email"/></td>
						</tr>
						<tr>
							<td width="">Phone Number</td>
							<td width=""><span t-field="o.partner_id.phone"/></td>
						</tr>
						

					<t t-foreach ="o.partner_id.amenities_id_rel" t-as="y">

					 <tr>
                        <td width="40%">National companion data</td>
                        <td width="60%"><span t-field="y.amenities_id_first"/><br></br>
										<span t-field="y.amenities_birth_day_first"/>
										
						
						</td>
                     </tr>
					 </t>
							
						
					</table>

					</div>

					<div class="col-6">
						<table class="unit_table">
						<tr>
							<td colspan="4" class="text-center"> Real Estate Data</td>
						</tr>
						<tr>
							<td width="">Apartment number</td>
							<td width=""><span t-field="o.building_unit.code"/></td>
						</tr>
						<tr>
							<td width="">flower</td>
							<td width=""><span t-field="o.building_unit.floor"/></td>
						</tr>
						<tr>
							<td width="">Rooms Number</td>
							<td width=""><span t-field="o.building_unit.rooms"/></td>
						</tr>
						<tr>
							<td width="">Toilets Number</td>
							<td width=""><span t-field="o.building_unit.bathrooms"/></td>
						</tr>
						<tr>
							<td width=""> Is there a patio</td>
							<td width=""><input type="checkbox"  t-att-checked="o.building_unit.is_patio"/></td>
						</tr>
						<tr>
							<td width="">furnished or not</td>
							<td width=""><input type="checkbox"  t-att-checked="o.building_unit.is_furnished"/></td>
						</tr>
						<tr>
							<td width="">kitchen cupboard</td>
							<td width=""><input type="checkbox"  t-att-checked="o.building_unit.is_kitchen_cupboard"/></td>
						</tr>
						<tr>
							<td width="">AC Type</td>
							<td width=""><span t-field="o.building_unit.air_condition"/></td>
						</tr>
						<tr>
							<td width="">AC Number</td>
							<td width=""><span t-field="o.building_unit.ac_number"/></td>
						</tr>

						
						<tr>
							<td width="">Electricity meter number</td>
							<td width=""><span t-field="o.building_unit.electricity_meter_number"/></td>
						</tr>
						<tr>
							<td width="">current reading Electricity</td>
							<td width=""><span t-field="o.building_unit.current_meter_reading"/></td>
						</tr>
						<tr>
							<td width="">Water meter number</td>
							<td width=""><span t-field="o.building_unit.electricity_meter"/></td>
						</tr>
						<tr>
							<td width="">current reading water</td>
							<td width=""><span t-field="o.building_unit.water_meter"/></td>
						</tr>

						<tr>
							<td width="">Gas meter number</td>
							<td width=""><span t-field="o.building_unit.gas_meter_number"/></td>
						</tr>
						<tr>
							<td width="">current reading Gas</td>
							<td width=""><span t-field="o.building_unit.current_meter_reading_gas"/></td>
						</tr>

						<tr>
							<td width="">Value rent</td>
							<td width=""><span t-field="o.building_unit.rental_fee"/></td>
						</tr>
						<tr>
							<td width="">Insurance value</td> 
							<td width=""><span t-field="o.building_unit.insurance_fee"/></td>
						</tr>

						<tr>
							<td width="">Payment of payments</td>
							<td width=""><span t-field="o.recurring_interval"/><br></br>
										<span t-field="o.periodicity"/>

							
							</td>
						</tr>
						<tr>
							<td width="">Contract starting date</td>

							<td width=""><span t-field="o.date_from"/></td>
						</tr>
						<tr>
							<td width="">Contract Duration </td>
							<td width=""><span t-field="o.contract_time"/></td>
						</tr>
						<tr>
                           <td width="">It renews automatically</td>
                           <td width=""> <input type="checkbox"  t-att-checked="o.is_creation"/></td>
                        </tr> 

						<tr>
							<td width="">Notes</td>
							<td width=""><span t-field="o.building_unit.note"/></td>
						</tr>
						
					</table>
							</div>
					</div>
        </xpath>
    </template>

   </data>
</odoo>