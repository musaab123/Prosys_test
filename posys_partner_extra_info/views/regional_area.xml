<odoo>
    <data>

        <record id="product_regional_area_action_custom" model="ir.actions.act_window">
            <field name="name">Regional Area</field>
            <field name="res_model">regional.area</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="product_regional_area_view" model="ir.ui.view">
            <field name="name">Regional Area</field>
            <field name="model">regional.area</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="name" string="Regional Area">
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="product_regional_area_view_test" model="ir.ui.view">
            <field name="name">Regional Area</field>
            <field name="model">regional.area</field>
            <field name="arch" type="xml">
                <tree>
                   
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

     

        <record id="regional_area_action_custom" model="ir.actions.act_window">
            <field name="name">Regional Area</field>
            <field name="res_model">regional.area</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="customer_regional_area_custom"
                  name="Regional Area"
                  action="regional_area_action_custom"
                  parent="contacts.menu_localisation"
                  sequence="9"/>
   
              
