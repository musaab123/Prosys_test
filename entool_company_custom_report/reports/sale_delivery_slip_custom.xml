<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="delevry_slip_china_customer_custom_pdf">
        <t t-call="web.html_container">
            <div class="article o_report_layout_standard" t-att-data-oe-model="" t-att-data-oe-id="">
                <t t-call="entool_company_custom_report.external_layout_standard_custom_stock" />
                <t t-foreach="docs" t-as="doc">
                    <!-- <t t-call="web.external_layout"> -->
                    <div class="page "
                        style="position: relative;
                    top: 60px; width:100%; font-size: 15px; ">

                        <style type="text/css">
                            @font-face {
                            font-family:KacstLetter ;
                            src: url(/entool_company_custom_report/static/fonts/KacstLetter.ttf);
                            }
                            h2 {font-family: KacstLetter;}
                            td {font-family: KacstLetter;}
                            th { font-family: KacstLetter;}
                            h5 { font-family: KacstLetter;}
                            h4 { font-family: KacstLetter;}
                            p { font-family: KacstLetter;}
                            span { font-family: KacstLetter;}


                        </style>
                        <div class="row">
                            <t t-if="o and 'company_id' in o">
                                <t t-set="company" t-value="o.company_id" />
                            </t>

                            <t t-if="not o or not 'company_id' in o">
                                <t t-set="company" t-value="res_company" />
                            </t>

                            <div class="col-4" style="font-size: 15px;">
                                <span class="m-0" t-field="doc.date_deadline" />
                                <span style="color:black;"><span class="text-white">cc</span>
                                    التاريخ </span>
                            </div>


                            <div class="col-4 text-center" style="font-size: 15px;">
                                <span class="m-0" t-field="doc.name" />
                                <span style="color:black;"><span class="text-white">cc</span> الرقم
                                    الداخلي </span>
                            </div>

                            <div class="col-4 text-end" style="font-size: 15px;">

                                <span style="color:black;"><span class="text-white">cc</span> امر
                                    تجهيز بضاعة </span>
                            </div>


                        </div>
                        <br></br>
                        <br></br>
                        <div class="row">
                            <style>
                                .custom-table {

                                width: 100%;
                                font-size:10px;
                                font-weight: normal;
                                font-size: 12px;

                                border-collapse: collapse;
                                border-spacing: 10px;

                                }

                                .custom-table .hed{
                                font-weight: bold;
                                font-size: 15px;

                                }


                                .custom-table th, .custom-table td {

                                border: 1px solid #ddd;

                                padding: 10px;

                                text-align: center;

                                }
                                .custom-table tr, {
                                margin-bottom: 10px;


                                }


                            </style>
                            <table class="custom-table" style="page-break-inside: avoid;">

                                <tr>
                                    <td>
                                        <span t-field="company.name" />
                                    </td>
                                    <td class="text-end hed">:الاسم </td>
                                    <td>

                                        <span t-field="doc.partner_id.name" />
                                    </td>
                                    <td class="text-end hed">:الاسم </td>
                                </tr>
                                <tr>

                                    <td>
                                        <!-- <span t-field="company.vat" /> -->
                                    </td>
                                    <td class="text-end"></td>
                                    <td>
                                        <span t-field="company.street" />
                                    </td>
                                    <td class="text-end hed">العنوان</td>
                                </tr>

                                <tr>
                                    <td>
                                        <span t-field="doc.partner_id.mobile" />
                                    </td>
                                    <td class="text-end hed">:الجوال </td>
                                    <td>

                                        <span t-field="doc.sale_id.amount_total" />
                                    </td>
                                    <td class="text-end hed">:المجموع النهائي </td>
                                </tr>

                                <tr>
                                    <td>
                                        <span t-field="doc.note" />
                                    </td>
                                    <td class="text-end hed">:الملاحظات </td>
                                    <td>

                                        <span t-field="doc.partner_id.total_due" />
                                    </td>
                                    <td class="text-end hed">: رصيد العميل </td>
                                </tr>

                                <tr>
                                    <td>
                                        <span>1 - 1</span>
                                    </td>
                                    <td class="text-end"> </td>
                                    <td>
                                        <span t-field="doc.company_id" />
                                    </td>
                                    <td class="text-end hed">: شركة الشحن </td>
                                </tr>

                            </table>


                        </div>

                        <br></br>
                        <div class="row">

                            <br></br>
                            <br></br>
                            <br></br>


                            <style>
                                .test {
                                width: 100%;
                                font-size:10px;
                                font-weight: normal;
                                border-collapse: collapse;
                                border-bottom: 1px solid black;
                                font-family: 'Lato', Arial, sans-serif;
                                }

                                .test .tes {
                                background-color: #bfbfbf;
                                color:black;
                                font-weight: bold;
                                font-size: 15px;
                                }

                                th, td {
                                padding: 5px;
                                text-align: center;
                                padding: 10px;
                                }


                                .test th,
                                .test td {
                                border-right: 1px solid black;
                                border-left: 1px solid black;

                                }


                            </style>

                            <table class="test" style="page-break-inside: avoid;">
                                <thead>
                                    <tr>

                                        <td class="tes"
                                        >
                                            <strong>3</strong>
                                        </td>

                                        <td class="tes"
                                        >
                                            <strong>2</strong>
                                        </td>
                                        <td class="tes"
                                        >
                                            <strong>1</strong>
                                        </td>

                                        <td class="tes"
                                        >
                                            <strong>البيان القلم</strong>
                                        </td>
                                        <td class="tes"
                                        >
                                            <strong>الوحدة</strong>
                                        </td>
                                        <td class="tes"
                                        >
                                            <strong>الكمية</strong>
                                        </td>
                                        <td class="tes"
                                        >
                                            <strong>رمز المادة</strong>
                                        </td>
                                        <td class="tes"
                                        >
                                            <strong>اسم المادة</strong>
                                        </td>

                                        <td class="tes"
                                        >
                                            <strong>رقم القلم</strong>
                                        </td>


                                    </tr>
                                </thead>
                                <t t-set="sequence" t-value="0" />

                                <tbody>
                                    <t t-set="lines"
                                        t-value="doc.move_ids.filtered(lambda x: x.product_uom_qty)" />
                                    <tr t-foreach="lines" t-as="move">


                                        <!-- <td>
                                                <span t-field="move.quantity_done" />
                                                <span t-field="move.product_uom" />
                                            </td> -->
                                        <t t-set="sequence" t-value="sequence + 1" />

                                        <!-- <td>
                                                <span t-field="move.product_uom_qty" />
                                                <span t-field="move.product_uom" />
                                            </td>

                                            <td name="td_quantity" class="text-end">
                                                <span t-field="move.product_packaging_id" />
                                            </td>

                                            <td name="td_quantity" class="text-end">
                                             

                                                <span class="arabic"
                                                    t-if="move.product_packaging_id.qty != 0"
                                                    t-esc="move.product_uom_qty / move.product_packaging_id.qty" />
                                                <span class="arabic"
                                                    t-else="move.product_packaging_id.qty == 0"></span>

                                            </td> -->


                                        <td>

                                        </td>
                                        <td>

                                        </td>
                                        <td>

                                        </td>

                                        <td>
                                            <span t-field="move.name" />
                                            <p
                                                t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                                <span t-field="move.description_picking" />
                                            </p>
                                        </td>


                                        <td>
                                            <span t-field="move.product_uom" />
                                        </td>
                                        <td>
                                            <span t-field="move.product_uom_qty" />
                                        </td>


                                        <td>
                                            <span t-field="move.product_id.default_code" />
                                            <p
                                                t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                                <span t-field="move.description_picking" />
                                            </p>
                                        </td>
                                        <td>
                                            <span t-field="move.product_id" />
                                            <p
                                                t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                                <span t-field="move.description_picking" />
                                            </p>
                                        </td>

                                        <td>
                                            <span t-esc="sequence" />
                                        </td>


                                    </tr>
                                </tbody>
                            </table>

                        </div>


                        <br></br>
                        <div class="row">
                            <style>
                                .custom-table {

                                width: 100%;
                                font-size:10px;
                                font-weight: normal;

                                border-collapse: collapse;
                                border-spacing: 10px;

                                }

                                .custom-table .hed{
                                font-weight: bold;
                                font-size: 15px;

                                }


                                .custom-table th, .custom-table td {

                                border: 1px solid #ddd;

                                padding: 10px;

                                text-align: center;

                                }
                                .custom-table tr, {
                                margin-bottom: 10px;


                                }


                            </style>
                            <table class="custom-table" style="page-break-inside: avoid;">

                                <tr>
                                    <!-- <td  >
                                        
                                    </td>
                                    <td class="text-end">:مبلغ المطالبة </td> -->
                                    <td colspan="3">

                                        <div t-if="doc.partner_id" name="partner_header">
                                            <div t-field="doc.partner_id"
                                                t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}' />
                                        </div>
                                    </td>
                                    <td class="text-end hed">:موقع العميل </td>
                                </tr>
                                <tr>

                                    <td>
                                        <!-- <span t-field="company.vat" /> -->
                                        <span t-field="doc.driver_id" />

                                    </td>
                                    <td class="text-end hed"> اسم المجهز</td>
                                    <td>
                                        <div t-field="doc.move_ids[0].partner_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                                    </td>
                                    <td class="text-end hed">اسم المستلم رقم جواله و توقيعه</td>
                                </tr>

                                <tr>
                                    <td colspan="3">
                                        <span t-field="doc.note" />
                                    </td>
                                    <td class="hed">:ملاحظات </td>

                                </tr>


                            </table>


                        </div>


                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>