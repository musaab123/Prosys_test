<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_form_view_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

                <xpath expr="//form/header/button[@name='action_post'][2]" position="replace">

                    <button name="action_post" string="Confirm" class="oe_highlight"
                    type="object"  data-hotkey="v"
                    context="{'validate_analytic': True}"
                    groups="prosys_invoice_invisable_workflow.group_workflow_sale_order_confirmation"
                    attrs="{'invisible': ['|', '|', ('hide_post_button', '=', True), ('move_type', '=', 'entry'), ('display_inactive_currency_warning','=',True)]}"/>

                </xpath>
            
        


        </field>
        </record>

    </data>
</odoo>
