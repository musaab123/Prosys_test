                                <tr class="p-5">
                                    <td>Total/B/Taxes/Discount</td> 
                                    <td colspan="6"  class="text-end arabic"><span t-esc="current_subtotal_1" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                    
                                </tr>

