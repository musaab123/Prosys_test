<?xml version="1.0" encoding="utf-8"?>
<odoo>
	     <template id="external_layout_seti">
        <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"/>  
        </t>

        <div class="header" >
            <table style="border:0pt solid grey;width:100%;font-size:12px;" width="100%">
                <link rel="stylesheet" href="/prosys_swage_template/static/src/css/style.css"/>
                <tr>
                    <td  width="50%">
                        <strong><span style="padding-left:5px;" t-field="company.name"/></strong><br/>
                        <t t-if="company.street">
                            <span style="padding-left:5px;" t-field="company.street"/><br/>
                        </t>
                        <t t-if="company.street2">
                            <span style="padding-left:5px;" t-field="company.street2"/><br/>
                        </t>
                        <t t-if="company.city">
                            <span style="padding-left:5px;" t-field="company.city"/><br/>
                        </t>
                        <t t-if="company.country_id">
                            <span style="padding-left:5px;" t-field="company.country_id.name"/><br/>
                        </t>
                        
                    </td>




                    
                    
                    <td  width="50%" class="text-end" >
                                 <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="height: 100px;width: 100px; padding-top:30px;" alt="Logo"/>
                    </td>
                </tr>

            </table>
        </div>
        
        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
        <div class="footer o_background_footer">
            <div class="text-center" style="font-size:14px;"  >
                <ul class="list-inline">
                    <li t-if="company.phone" class="list-inline-item"><i class="text-white fa fa-phone" role="img" aria-label="Phone" title="Phone"/><strong>User Name: </strong><span t-field="user.name"/></li>
                    <li t-if="company.email" class="list-inline-item"><i class="text-white fa fa-at" role="img" aria-label="Email" title="Email"/> <span class="text-white" t-field="company.email"/></li>
                    <li t-if="company.website" class="list-inline-item"><i class="text-white fa fa-globe" role="img" aria-label="Website" title="Website"/> <span class="text-white" t-field="company.website"/></li>
                    <li  class="list-inline-item"><i class="text-white fa fa-building-o" role="img" aria-label="Fiscal number"/><strong>Date: </strong><span t-esc="o.date_creation"/></li>
                </ul>
                <!-- <div t-field="company.report_footer"/> -->
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page:
                    <span class="page"/>
                    of
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

	<template id="swag_purchaseorder_custom_template">
		<t t-call="prosys_swage_template.external_layout_seti">
			<t t-foreach="doc" t-as="o">
				<div class="page" style="">
					<link rel="stylesheet" href="/prosys_packing_list_custom/static/src/css/style.css"/>
					<t t-set="company" t-value="res_company"/>
					<div class="font">
					<table style="border:1pt solid grey;width:100%;
   						 height: 23px;color:black; margin-top:10pt;" class="table-condensed table-sm">
							<tr>
								<td style="padding:1pt;margin:0pt;font-weight: bold;text-align:center;background-color:#DCDCDC;"><span class="text-right arabic">purchase order /  امر شراء  </span></td> 
							</tr>
					</table>
					<br></br>
					<br></br>
					<br></br>

			        <div class="row">
                        <div name="invoice_address" class="col-4">
                            <address t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                        </div>
			            <div class="col-4">
			          
                              
                           <strong>Sale Order No: </strong>
                           <td class="text-start">
                              <span t-field="o.name"/> 
                           </td>
                              <br></br> 

                           <strong>Order Date: </strong>
                           <td class="text-start">
                              <span t-field="o.date_order"/> 
                           </td>
                              <br></br> 
                                 

                              <strong>Mobile</strong>
                            <td t-if="doc.partner_id.mobile" class="text-start">
                                 <span t-field="doc.partner_id.mobile"/>
                              </td>
                              <br></br>  
                              <strong>Phone</strong>
                               <td t-if="doc.partner_id.phone" class="text-start">
                                 <span t-field="doc.partner_id.phone"/>
                              </td>
                              <br></br>  
                              <strong>Email</strong>
                              <td t-if="doc.partner_id.email" class="text-start">
                               <span t-field="doc.partner_id.email"/>
                            </td>
                              <br></br>  
              
                             

                        <!-- <strong>Vat Number : </strong>
                        <td t-if="doc.partner_id.vat" class="text-start">
                         <span t-field="doc.partner_id.vat"/>
                        </td> -->
			           

			            	

			          
						</div>
                        <div class="col-4" >
                            <div style="border-top: 3px solid #ff8c00; border-bottom: 3px solid black; border-left: 3px solid black; border-right: 3px solid #ff8c00;">
                                <br></br>
                                <br></br>
                                <br></br>

                                        <span t-field="doc.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                                <br></br>
                                <br></br>
                                <br></br>
                                <br></br>
                    </div>
                            
			                 <!-- <img t-if="doc.get_qr_code()"
								style="display:block;"
								t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', doc.get_qr_code(), 110, 110)"/> -->
			            </div>
                    </div>
					<br></br>
					<br></br>

                


                <div class="col-12 knk arabic">
                    <table class="table table-sm table-borderless" style="page-break-inside: avoid;">
                        <thead style="border-top: 3px solid #ff8c00; border-bottom: 3px solid black;">
                            <tr class="knk">
                                <td name="th_description" class="text-start p-3">
                                    Product
                                </td>
                                <td name="th_quantity" class="text-start">
                                    Expected Arrival
                                </td>
                                <td name="th_priceunit" class="text-center">
                                    Quantity
                                </td>
                                <td name="th_priceunit" class="text-end">
                                    Price
                                </td>
                                <td name="th_priceunit" class="text-end">
                                    Amount
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="current_subtotal" t-value="0" />
                            <t t-set="current_subtotal_1" t-value="0" />

                            <t t-foreach="doc.order_line" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" />
                                <t t-set="current_subtotal_1" t-value="current_subtotal_1 + line.price_subtotal" />

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" />

                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td class="text-start">
                                            <span t-field="line.product_id.name" />
                                        </td>
                                        <td name="td_taxes">
                                            <span t-field="line.date_planned" />
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.product_qty" />
                                            <span t-field="line.product_uom.name" />
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.price_unit" />
                                        </td>
                                        <td class="text-end">
                                              <span t-field="line.price_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99" id="section">
                                            <span t-field="line.name" />
                                        </td>
                                        <t t-set="current_section" t-value="line" />
                                        <t t-set="current_subtotal" t-value="0" />
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99" id="note">
                                            <span t-field="line.name" />
                                        </td>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-end">
                                        <td colspan="99" id="subtotal">
                                            <strong class="mr16">
                                                Subtotal
                                            </strong>
                                            <span t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>

                            <tr class="p-5">
                                <td>Total</td>
                                <td colspan="5"  class="text-end arabic"><span t-esc="current_subtotal_1" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                             </tr>
                            <!-- <div id="total" class="row justify-content-end arabic">
