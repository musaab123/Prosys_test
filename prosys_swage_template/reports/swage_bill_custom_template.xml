	<template id="report_swage_bill_document">
		<t t-call="prosys_swage_template.external_layout_seti_test">
			<t t-foreach="doc" t-as="o">
				<div class="page" style="">
					<link rel="stylesheet" href="/prosys_swage_template/static/src/css/style.css"/>
					<t t-set="company" t-value="res_company"/>
					<div class="font">
					<table style="border:1pt solid grey;width:100%;
   						 height: 23px;color:black; margin-top:10pt;" class="table-condensed table-sm">
							<tr>
								<td style="padding:1pt;margin:0pt;font-weight: bold;text-align:center;background-color:#DCDCDC;"><span class="text-right arabic">Tax Invoice / فاتورة ضريبية </span></td> 
							</tr>
					</table>
					<br></br>
					<br></br>
					<br></br>

			        <div class="row">
                        <div name="invoice_address" class="col-4">
                            <address t-field="o.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                        </div>
			            <div class="col-4">
			            	<p>
			            		<span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                                    <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                    <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                                    <span t-if="o.name != '/'" t-field="o.name"/>
                                </span>
                                <br></br>
                                <br></br>


			            		<strong>Invoice Date: </strong><span t-field="o.invoice_date"/>
                                <br></br>
                                <br></br>


			            		<strong>Payment Terms: </strong><span t-field="o.invoice_payment_term_id"/>
                                <br></br>
                                <br></br>


			            		<strong>Bransh</strong>
                                <span t-field="o.analytic_account_id"/>
                                <br></br>
                                <br></br>

                                <strong>VAT No </strong> <span t-field="company.vat"/>
                                <br></br>
                                <br></br>
                                
			            	</p>
						</div>
                        <div class="col-4" >
                            <div style="border-top: 3px solid #ff8c00; border-bottom: 3px solid black; border-left: 3px solid black; border-right: 3px solid #ff8c00;">
                                <br></br>
                                <br></br>
                                <br></br>

                                        <span t-field="doc.name" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
                                <br></br>
                                <br></br>
                                <br></br>
                                <br></br>
                    </div>
                            
			                 <!-- <img t-if="doc.get_qr_code()"
								style="display:block;"
								t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', doc.get_qr_code(), 110, 110)"/> -->
			            </div>
                    </div>
					<br></br>
					<br></br>

                


                <div class="col-12 knk arabic">
                    <table class="table table-sm table-borderless" style="page-break-inside: avoid;">
                       <thead style="border-top: 3px solid #ff8c00; border-bottom: 3px solid black;">
                          <tr class="knk">
                              <td name="th_description"  class=" arabic" style="height: 40px;  vertical-align: middle;">Product</td>
                               <td name="th_priceunit" class=" arabic" style="height: 40px;  vertical-align: middle;">Price</td>
                             <td name="th_quantity" class=" arabic" style="height: 40px;  vertical-align: middle;">Quantity</td>
                             <td name="th_priceunit" class=" arabic" style="height: 40px;  vertical-align: middle;">Discount</td>
                             <td name="th_priceunit" class=" arabic" style="height: 40px;  vertical-align: middle;">Taxes</td>
                             <td name="th_priceunit" class="text-end arabic" style="height: 40px;  vertical-align: middle;">Amount</td>



                            
                          </tr>
                       </thead>

                       <t t-set="tax_total" t-value="0"/>
                     <t t-set="discount_total" t-value="0"/>
                     <t t-set="qua_total" t-value="0"/>
                     <t t-set="brand_count" t-value="0"/>


                    <tbody class="invoice_tbody">
                         <tr t-foreach="doc.invoice_line_ids" t-as="l">
                             <t t-set="line_tax_total" t-value="0"/>
                             <t t-foreach="l.tax_ids" t-as="t">
                                 <t t-set="tax_total" t-value="tax_total + l.price_subtotal* t.amount/100"/>
                                 <t t-set="line_tax_total" t-value="line_tax_total + t.amount"/>
                             </t>
                             <t t-set="discount_total" t-value="discount_total + l.discount"/>
                             <t t-set="qua_total" t-value="qua_total + l.quantity"/>

                             <td >
                                 <span class="arabic" t-esc="l.product_id.name"/>
                                 <br/>
                             </td>
                             <td class="arabic"><span t-field="l.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                             <td class="arabic"><span t-esc="'%.2f %s '%(l.quantity,l.product_uom_id.name)"/></td>

                         

                             <td class="arabic">
                                <span t-field="l.discount"/>
                             </td>
                             
                      
                             <td class="arabic">
                                 <t t-set="line_tax_total" t-value="l.price_subtotal*line_tax_total/100"/>
                                 <sapn t-esc="line_tax_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                             </td>


                             <td  class="text-end arabic">
                                <span t-esc="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                            
                         </tr>
                                
                     
                                  <hr></hr>
                          


                                <tr class="p-5">
                                    <td>Total Quantity</td> 
                                     <td colspan="5"  class="text-end arabic"><span t-esc="qua_total"/></td>
                                    
                              </tr>

                              <tr class="p-5">
                                <td>Number Of Brand</td> 
                                
                                <!-- <t t-foreach="doc.invoice_line_ids" t-as="ml"> -->
                                   
                                    <td colspan="5" class="text-end arabic"> <span t-esc="len(set(l.product_id.brand_id for l in o.invoice_line_ids))"/></td>


                                 <!-- </t> -->
                                
                          </tr>
                                
                                <tr>
                                      <td>Taxes</td> 
                                      <td colspan="5" class="text-end arabic"><span t-esc="tax_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>

                                </tr>

                                <tr>
                                    <td>Total Descount</td> 
                                    <td colspan="5" class="text-end arabic"><span t-esc="discount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>

                              </tr>

                              

                                
                                <tr>
                                    <td>Total Before Discount</td> 
                                   <td  colspan="5" class="text-end arabic"><span t-esc="doc.amount_untaxed + tax_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                              </tr>

                              <tr>
                                <td>Total After Discount</td> 
                               <td  colspan="5" class="text-end arabic"><span t-esc="(doc.amount_untaxed + tax_total) - discount_total " t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                </tr>

                                <tr>
                                    <td>Final Total</td> 
                                   <td  colspan="5" class="text-end arabic"><span t-esc="(doc.amount_untaxed + tax_total) - discount_total " t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                    </tr>

                                    <tr>
                                        <td>payment method</td> 
                                       <td >
                                                <t t-if="doc.amount_residual == 0 and doc.move_type == 'out_invoice' and doc.state == 'posted'">
                                                
                                                    <td  colspan="5" class="text-end arabic" >Pre Paid Sale</td>
                                                </t>
                                                            
                                                <t t-if="doc.amount_residual > 0 and doc.move_type == 'out_invoice' and doc.state == 'posted'">
                                                    <td  colspan="5" class="text-end arabic"> Post Paid Sales</td>
                                                </t>

                                                <t t-if="doc.amount_residual == 0 and doc.move_type == 'in_invoice'">
                                                    <td  colspan="5"  class="text-end arabic">Pre Paid Purchases</td>
                                                </t>
                                                        
                                                <t t-if="doc.amount_residual > 0 and doc.move_type == 'in_invoice'">
                                                    <td  colspan="5" class="text-end arabic">Post Paid Purchases</td>
                                                </t>
                                       </td>
                                     </tr>

                                         <tr>
                                        <td>Payment terms</td> 
                                       <td  colspan="5" class="text-end arabic"> <span  t-field="doc.invoice_payment_term_id"/></td>
                                        </tr>
                       </tbody>
                    </table>

                    <br></br>
                    <br></br>

                    <div class ="row">
                        <div class="col-6" style=" border-top: 3px solid #ff8c00; border-bottom: 3px solid black; border-left: 3px solid black; border-right: 3px solid #ff8c00; padding: 10px 10px 10px 10px;">
                            <strong style=" margin:auto;">Shipping document number :</strong>
                            <span> <span  t-field="doc.shipping_document_number_id"/></span>
                            <br></br>
                            <strong style=" margin:auto;">Shipping Company :</strong>
                            <span> <span  t-field="doc.shipping_company_id"/></span>
                            
                      
                          
                        </div>
                       

                        <!-- <div class ="col-6 d-flex justify-content-end">
                            <img t-if="doc.get_qr_code()"
                            t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', doc.get_qr_code(), 140, 140)"/> 
                        </div> -->
                    </div> 
                   

                 </div>					
					</div>
				</div>
			</t>
		</t>
	</template>
	
	<template id="report_swage_custom_bill">
	    <t t-call="web.html_container">
	        <t t-foreach="docs" t-as="doc">
	            <t t-call="prosys_swage_template.report_swage_bill_document"/>
	        </t>
	    </t>
	</template>
</odoo>
