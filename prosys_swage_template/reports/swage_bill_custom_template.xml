                <link rel="stylesheet" href="/prosys_swage_template/static/src/css/style.css"/>
                <tr>

                <tr t-if="lang == 'en_US'">
                    <!-- English Header -->
                    <td colspan="2" width="30%">
                        <strong><span style="padding-left:5px;" t-field="company.name"/></strong><br/>
